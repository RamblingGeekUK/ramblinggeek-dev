---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero2.astro';
import LatestPosts from '~/components/blog/LatestPosts.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: false,
};

var startYear = new Date(1995,5,9);   // The Date I started working for Parity Computers. ðŸ™‚
var today = new Date();
var yearsDiff = today.getFullYear() - startYear.getFullYear();
---
<Layout {meta}>
  <Hero
    image={{ src: import('~/assets/images/hero-raining-tech.svg'), alt: 'Raining Tech' }}
    >
    <Fragment slot="title">
      Hello, I'm Wayne
    </Fragment>  
    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        I have been working in the IT industry for the last <span class="font-semibold">{yearsDiff}</span> years.
      </span>
      <br/>
      Recently I moved into a development role.
    </Fragment>
    
  </Hero>

  <!-- HighlightedPosts Widget ******* -->

  <LatestPosts
    title="Latest posts"
    information={``}
    postIds={[
      'get-started-website-with-astro-tailwind-css.md',
      'how-to-customize-astrowind-to-your-brand.md',
      'useful-resources-to-create-websites.md',
      'astrowind-template-in-depth.md',
    ]}
    />

</Layout>
